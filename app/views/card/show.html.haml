= render "toppages/header"
.payment-wrapper
  = render 'mypages/side_bar'
  .payment-info-head
    .payment-info-title
      %h2 登録クレジットカード情報
    .payment-info-wrapper
      .payment-info-wrapper-child
        .payment-info-wrapper-child__cardnumber
          = "カード番号：""**** **** **** " + @default_card_information.last4

        %p.payment-info-wrapper-child__carddate
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = "カード有効期限：" + "20" + exp_year + "年" + exp_month + "月"

        = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button カード情報を削除する
= render 'toppages/footer'