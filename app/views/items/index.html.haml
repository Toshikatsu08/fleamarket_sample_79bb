= render "toppages/header"
.item__body
  %h3.item__body__title 新規投稿商品一覧
  .item__body__lists
    - @items.each do |item|
      .item__body__lists__list
        = link_to item_path(item.id) do
          %figure.list__img
            = image_tag item.images.first.image.url
              - if item.buyer_id.present?
              .items-box_photo__sold
                .items-box_photo__sold__inner 
                  SOLD
          .list__body
            %h3.name
              = item.item_name
            .list__price
              %ul
                %li
                  = item.price
                  円
                %li
                  %i.fa.fa-star.likeIcon 0
              %p (税込)
= render "toppages/app_banner"
= render "toppages/footer"
= render "toppages/purchaseBtn" 